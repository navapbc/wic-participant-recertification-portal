{
  "name": "participant_portal",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "dev": "run-s dev:startdb css dev:remix",
    "dev:docker": "npm install && run-s css dev:remix",
    "dev:remix": "remix dev",
    "dev:startdb": "docker compose up postgres --wait && npx prisma db push && npx prisma db seed",
    "css": "run-s css:build css:post",
    "css:build": "sass -I ./styles -I ./node_modules/@uswds -I ./node_modules/@uswds/uswds/packages styles:app/styles/unprefixed --style compressed",
    "css:post": "postcss ./app/styles/unprefixed/styles.css --use autoprefixer -d ./app/styles",
    "css:dev": "npm run css:build && sass -I ./styles -I ./node_modules/@uswds -I ./node_modules/@uswds/uswds/packages --watch styles:app/styles",
    "test": "jest",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "e2e": "docker compose -f docker-compose.e2e.yml up --build --wait database-e2e && docker compose -f docker-compose.e2e.yml up --build --wait remix-e2e && docker compose -f docker-compose.e2e.yml run --rm playwright npx playwright test --retries=3 --reporter=list",
    "e2e:update": "docker compose -f docker-compose.e2e.yml up --build --wait database-e2e && docker compose -f docker-compose.e2e.yml up --build --wait remix-e2e && docker compose -f docker-compose.e2e.yml run --rm playwright npx playwright test --update-snapshots --reporter=list",
    "e2e:cleanup": "docker compose -f docker-compose.e2e.yml down --remove-orphans",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "storybook:docker": "docker compose up -d remix_dev && docker compose exec remix_dev npm run storybook",
    "typecheck": "tsc"
  },
  "browserslist": [
    "defaults"
  ],
  "prettier": {},
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
