    "pg": "^8.9.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.6.0",
    "@playwright/test": "^1.31.2",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-playwright": "^0.12.0",
    "lowdefy": "^3.23.3",
    "playwright-core": "^1.31.2",
    "prettier": "^2.8.4",
    "prisma": "^4.11.0"
  },
  "browserslist": [
    "defaults"
  ],
  "prettier": {},
  "eslintIgnore": [
    "/.lowdefy",
    "/node_modules",
    "/public"
